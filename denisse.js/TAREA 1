.splice

using namespace std;

int main()
{
    int opcion;
    bool repetir = true;
    
    do {
        system("cls");
        
        // Texto del menú que se verá cada vez
        cout << "\n\nMenu de Opciones" << endl;
        cout << "1. agregar 1" << endl;
        cout << "2. buscar 2" << endl;
        cout << "3. borrar 3" << endl;
        
        cout << "Ingrese una opcion: ";
        cin >> opcion;
        
        switch (opcion) {
            case 1:
                // Lista de instrucciones de la opción 1                
                
                system("pause>nul");

                 var juegos = [];
                 var ingreso, bandera = true;
                 alert(bienbenido al registro de animales);

                 whlle(bandera == true){
                     ingreso = promp("ingresa un juego");
                     var res = promp("desea ingresar otro juego?");
                     juego.push(ingreso);

                     if (res == "j"  || res == "j"){
                     bandera = true; 
                     }else{
                     bandera = false;
                     }
                }

                console.log(juegos);
                break;
                
            case 2:
                // Lista de instrucciones de la opción 2                
                
                system("pause>nul");

                var juegos = ["halo", "forza", "albion", "uno", "hyperforma"]
                var bandera =true;

                while (bandera == true ){
                    var res = prompt("Quieres buscar algun juego?");
                    if(res == "j" || res == "J"){
                        var juego = prompt("ingresa el nombre del juego");
                        juego.toLowercase();

                        //busqueda
                        for(var i = 0; i < juegos.length; i++){
                            if(juego == juegos[i]){
                             alert("El juego: " + juegos [i] + "")
                            }
                        }
                    }else{
                    bandera = false;
                }   
                }

                break;
            case 3:
                // Lista de instrucciones de la opción 3                
                
                system("pause>nul");

                var juegos = ["halo", "forza", "albion", "uno", "hyperforma"];
                var bandera = true;

                while(bandera == true ){
                    var res = prompt("Quieres borrar algun juego?");
                    if(res == "j" || res == "J"){
                        var juego = prompt("ingresa el nombre del juego");
                        juego.toLowercase();

                        //busqueda
                            for(var i = 0; i < juegos.length; i++){
                                if(juego == juegos[i]){
                                    juegos.pop(juegos[i])
                                    alert("el juego a sido borrado")
                                    console.log(juegos)
                                }
                            }
                    }else{
                    bandera = false;
                    }
                    }
                break;

        }        
    } while (repetir);
	 
    return 0;
}